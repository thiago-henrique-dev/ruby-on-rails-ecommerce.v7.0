
<%= simple_form_for([:admin, @product],html: { class: 'login-form' }) do |f| %>
  
  <div class="alert alert-danger" role="alert">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  </div>

  <div class="form-inputs">
<div class="form-group">
<label class="col-sm-3 col-form-label col-form-label-sm">Nome</label></br>
            <%= f.text_field :name,
                required: false,
                autofocus: true,
                class:"form-control", 
                input_html: { autocomplete: "Nome" }
             %>
		    	</div>

    <div class="form-group">
        <label class="col-sm-3 col-form-label col-form-label-sm">Descrição</label></br>
            <%= f.text_field :description,
                required: false,
                autofocus: true,
                class:"form-control", 
                input_html: { autocomplete: "Descrição" }%>
	</div>
    <div class="form-group">
        <label class="col-sm-3 col-form-label col-form-label-sm">Preço</label></br>
            <%= f.input_field :price,
                required: false,
                autofocus: true,
             
                class:"form-control", 
                input_html: { autocomplete: "Descrição" }%>
    </div>
    <div class="form-group">
    <label class="col-sm-3 col-form-label col-form-label-sm">Publish</label></br>
            <%= f.input_field :publish,
                required: false,
                autofocus: true,
                class:"form-control", 
                input_html: { autocomplete: "Preço" }%>
    </div>
     <div class="form-group">
            <%= f.association :category,
                required: false,
                autofocus: true,
             
                class:"form-control", 
                input_html: { autocomplete: "Descrição" }%>
    </div>

  </div>

       <div class="form-group">
        <%= f.button :submit, "Salvar", class:"btn btn-primary rounded btn-block p-2 px-5" %>
    </div>

<% end %>
