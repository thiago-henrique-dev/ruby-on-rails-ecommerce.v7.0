<p style="color: green"><%= notice %></p>

<h1>Produtos</h1>

<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-body">
              <table class="table table-striped">
                <thead class="thead-light">
                  <th>Nome</th>
                  <th>Descrição</th>
                  <th>Price</th>
                  <th>Ativo</th>
                  <th>Ações</th>

                </thead>
                <tbody>
                    <% @products.each do |product| %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td><%= product.price %></td>
                    <td><%= product.publish %></td>

                  </tr>
                  <td>
                      <%= link_to "Detalhes", admin_product_path(product), class:"btn btn-primary btn-sm" %>
                      <%= link_to "Editar", edit_admin_product_path(product), class:"btn btn-secondary btn-sm"%> 
                      <%= link_to "Excluir", admin_product_path(product), method: :delete, class:"btn btn-danger btn-sm", data: {
                  turbo_method: :delete,
                  turbo_confirm: "Deseja realmente excluir?"
                }  %>
                  </td>
                  <% end %>
                </tbody>
              </table>
              <%= link_to "Novo Produto", new_admin_product_path, class:"btn btn-dark btn-sm" %>
            </div>
        </div>
    </div>
</div>
