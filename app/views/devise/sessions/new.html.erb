


  <%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
            <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                placeholder: 'Email',
                class:"form-control", 
                input_html: { autocomplete: "email" }
             %>
		    	</div>
      <div class="form-group d-flex">
       <%= f.input :password,
                required: false, class:"form-control rounded-left",
                 label: false,
                placeholder: 'Senha',
                input_html: { autocomplete: "current-password" } %>
	            </div>
     <div class="form-group">
        <%= f.button :submit, "Entrar", class:"btn btn-primary rounded btn-block p-2 px-5" %>
    </div>
        <div class="form-group d-md-flex">
	          <div class="w-50">
	      		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  					</div>
				<div class="w-50 text-md-right">
            <%= render "devise/shared/links" %>
				</div>
    </div>

  <% end %>

