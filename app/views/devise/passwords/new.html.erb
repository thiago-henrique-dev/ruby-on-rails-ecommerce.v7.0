<p class="par">Digite seu email.</p>

<%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
     <% if resource.errors.any?%>
  <div class="alert alert-danger" role="alert">
  <%= f.error_notification %>
  </div>
  <% end%>
  <div class="form-group">
    <%= f.text_field :email,
                required: true,
                autofocus: true,
                class:"form-control", 
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Recuperar senha", class:"btn btn-primary rounded btn-block p-2 px-5" %>
  </div>
   <div class="form-group d-md-flex">
	      
				<div class="w-80 text-md-left">
            <%= render "devise/shared/links" %>
				</div>
    </div>
<% end %>


