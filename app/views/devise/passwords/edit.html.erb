<p>Alterar senha.</p>

<%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
   <% if resource.errors.any?%>
  <div class="alert alert-success" role="alert">
  <%= f.error_notification %>
  </div>
  <% end%>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

      <div class="form-group">
    <%= f.password_field  :password,
                label: "New password",
                required: true,
                autofocus: true,
                  placeholder: "Digite a nova senha #{@minimum_password_length}",
                class:"form-control", 
                input_html: { autocomplete: "new-password" } %>
                </div>
        <div class="form-group">
     <div class="form-group d-flex">

    <%= f.password_field :password_confirmation,
                label: "Confirm your new password",
                  placeholder: 'Confirme a senha',
                class:"form-control", 
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Alterar a senha", class:"btn btn-primary rounded btn-block p-2 px-5" %>

  </div>

   <div class="form-group d-md-flex">
	        
				<div class="w-50 text-md-right">
            <%= render "devise/shared/links" %>
				</div>
    </div>

<% end %>

