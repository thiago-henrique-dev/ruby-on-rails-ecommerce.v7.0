

<%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h3>Registre-se</h3>
  
  <% if resource.errors.any?%>
  <div class="alert alert-danger" role="alert">
  <%= f.error_notification %>
  </div>
  <% end%>

  <div class="form-group">
    <%= f.text_field  :email,
                required: true,
                autofocus: true,
                 placeholder: 'Email',
                class:"form-control", 
                input_html: { autocomplete: "email" }%>
                </div>
   <div class="form-group d-flex">

    <%= f.password_field :password,
                required: true,
                 placeholder: 'Senha',
                class:"form-control", 
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
                   </div>
                      <div class="form-group d-flex">

    <%= f.password_field :password_confirmation,
               placeholder: 'ConfirmaÃ§Ã£o da senb',
                class:"form-control", 
                required: true,
                input_html: { autocomplete: "new-password" } %>
                 </div>
  

   <div class="form-group">
        <%= f.button :submit, "Registrar", class:"btn btn-primary rounded btn-block p-2 px-5" %>
    </div>

 <div class="form-group d-md-flex">
	          <div class="w-50">
	      		    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  					</div>
				<div class="w-50 text-md-right">
            <%= render "devise/shared/links" %>
				</div>
    </div>
<% end %>